{
  "name": "ChatMe",
  "version": "1.0.0",
  "description": "Chat app built with Express & Socket.io",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "npm run build --prefix client",
    "server": "nodemon src/index.js",
    "client": "npm run serve --prefix client",
    "heroku-postbuild": "npm i --prefix client && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\" "
  },
  "keywords": [],
  "author": "Jeferson S. Brito",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.3",
    "web-push": "^3.3.5"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2"
  }
}
